<!DOCTYPE html>
<html>
  <head>
    <title>Bookmark Manager</title>
  </head>
  <body>
    <% if flash[:notice] %>
      <div id='notice'><%= flash[:notice] %></div>
    <% else %>
      <% if current_user %>
        Welcome, <%= current_user.email %>
      <% end %>
    <% end %>
    <%= yield %>
  </body>
</html>
